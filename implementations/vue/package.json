{
  "name": "scoreboard-vue",
  "version": "1.0.0",
  "description": "Vue.js implementation of the scoreboard app",
  "main": "index.js",
  "scripts": {
    "copy:vendor": "./copy-vendor.sh",
    "build": "npm run copy:vendor && vite build",
    "build:watch": "npm run copy:vendor && vite build --watch",
    "serve": "http-server -c-1 ./public",
    "start": "run-p build:watch serve",
    "type-check": "vue-tsc --noEmit",
    "lint:check": "prettier . --check",
    "lint:fix": "prettier . --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bulma": "^1.0.3",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vue-tsc": "^3.0.3"
  }
}
